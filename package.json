{
  "name": "duunoii-video-platform",
  "version": "1.0.0",
  "description": "Video platform similar to YouTube/Netflix built with NestJS and Next.js",
  "main": "index.js",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && npm run start:dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd api && npm run build",
    "build:web": "cd web && npm run build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd api && npm run test",
    "test:web": "cd web && npm run test",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd api && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:web",
    "lint:fix:api": "cd api && npm run lint -- --fix",
    "lint:fix:web": "cd web && npm run lint:fix",
    "format": "npm run format:api && npm run format:web",
    "format:api": "cd api && npm run format",
    "format:web": "cd web && npm run format",
    "docker:dev": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "workspaces": [
    "api",
    "web",
    "shared"
  ],
  "keywords": ["video", "platform", "nestjs", "nextjs", "youtube", "streaming"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}